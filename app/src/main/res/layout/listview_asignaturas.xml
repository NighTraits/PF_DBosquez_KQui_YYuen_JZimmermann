<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/lblNombreAsig"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:fontFamily="@font/opensansregular"
        android:text="Asignatura: Inteligencia Artificial"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/lblCodigoAsig"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/opensansregular"
        android:text="0758"
        android:textSize="20dp" />


    <TextView
        android:id="@+id/lblGrupoAsig"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@id/lblCodigoAsig"
        android:fontFamily="@font/opensansregular"
        android:text="1IL141"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/lblPeriodoAsig"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:layout_toRightOf="@id/lblGrupoAsig"
        android:fontFamily="@font/opensansregular"
        android:text="II Semestre"
        android:textSize="20dp" />

</RelativeLayout>